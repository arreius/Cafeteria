        <div class="row row-cols-1 row-cols-md-3 g-4">
          <% if (data) { %> <% for(var i = 0; i < data.length; i++) { var
          path="images/"+data[i].idCategoria+"menu.jpg" var num =
          data[i].precio; num = (Math.round(num * 100) / 100).toFixed(2) var
          categoria=data[i].idCategoria; if(categoria==1){ %>

          <div class="col">
            <div class="card border-0 bacground">
              <img src="<%=path%>" class="card-img-top" />
              <div class="card-body">
                <h5 class="card-title" id="nombre">
                  <%= data[i].nombreProducto%>
                </h5>
                <span class="ml-auto">Precio Q.<%=num%> </span>
                <button
                  onclick="addRow('<%= data[i].idProducto%>','<%= data[i].nombreProducto%>','<%= data[i].precio%>');"
                  class="btn btn-primary btn-x5 btn-add"
                >
