      <div class="cta-inner text-center rounded">
        <h1><span class="site-heading-lower">Carrito de Compras</span></h1>
        <hr />
        <div class="my-5">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Acción</th>
                <th scope="col">Total</th>
              </tr>
