                <div class="card border-0 bacground" >
                  <img src="<%=path%>" class="card-img-top">
                  <div class="card-body">
                    <h5 class="card-title"><%= data[i].nombreProducto%></h5>
                    <span class="ml-auto">Precio Q.<%=num%> </span> 
                    <a class="btn btn-primary btn-x5" href="#">AÃ±adir al carrito</a>
                  </div>
                </div>
              </div>
          
          
            <% } %>
          <% } %>
          </div>
      </div>
    </div>


  </div>
</section>


