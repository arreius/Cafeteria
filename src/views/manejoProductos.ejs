<%- include('partials/_header') %>
<section class="page-section cta">
  <div class="container">
    <div class="row">
      <div class="col-xl-11 mx-auto">
        <div class="cta-inner text-center rounded">
          <h1>   <span class="site-heading-lower">Manejo de Productos</span></h1>
          <hr>
          <div class="row">
            <div class="col-md-7">
      
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Descripci√≥n</td>
                    <td>Precio</td>
                    <td>Stock</td>
                    <td>Categoria</td>
                    <td>Actions</td>
                  </tr>
                </thead>
                <tbody>
                  <% if (data) { %>
                    <% for(var i = 0; i < data.length; i++) { %>
                      <tr>
                        <td><%= data[i].idProducto %></td>
                        <td><%= data[i].nombreProducto %></td>
                        <td><%= data[i].descripcion %></td>
                        <td><%= data[i].precio %></td>
                        <td><%= data[i].stock %></td>
                        <td><%= data[i].idCategoria %></td>
                        <td>
                          <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                          <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                        </td>
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="col-md-5">
              <div class="card-body">
        
                <form action="/addPlatillo" method="POST">
                  <div class="form-group">
                    <input type="text" name="nombreProducto" placeholder="Nombre Platillo" class="form-control" autofocus>
                  </div>
                  <div class="form-group">
                    <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="precio" placeholder="Precio" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="stock" placeholder="Stock" class="form-control">
                  </div>
                  <div class="form-group">
                    <input type="text" name="idCategoria" placeholder="ID Categoria" class="form-control">
                  </div>
        
                  <button type="submit" class="btn btn-primary">
                    Guardar Platillo
                  </button>
                </form>
              </div>
            </div>
          </div>
                          
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/_footer') %>